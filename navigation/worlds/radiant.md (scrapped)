<div class="content">
    <header class="heading">
        <h1>Radiant Finds</h1>
        <p>Find the best products here</p>
    </header>

    <br>

    <section>
        <h2>Products</h2>
        <div id="products"></div>
    </section>

    <section>
        <h2>Cart</h2>
        <div id="cart"></div>
        <button onclick="checkout()">Checkout</button>
    </section>

    <section>
        <h2>Shipping Information</h2>
        <p id="shipping"></p>
    </section>
</div>

<script type="module">
    import { pythonURI, fetchOptions } from "{{site.baseurl}}/assets/js/api/config.js";

    async function loadProducts() {
        const response = await fetch(`${pythonURI}/api/radiant/rotating_shop`);
        const data = await response.json();
        const productsDiv = document.getElementById('products');
        productsDiv.innerHTML = '';
        data.products.forEach(product => {
            const productDiv = document.createElement('div');
            productDiv.innerHTML = `<p>${product.name} - $${product.price}</p>
                                    <button onclick="addToCart(${product.id})">Add to Cart</button>`;
            productsDiv.appendChild(productDiv);
        });
    }

    async function addToCart(productId) {
        const response = await fetch(`${pythonURI}/api/radiant/add_to_cart`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ product_id: productId, quantity: 1 })
        });
        const data = await response.json();
        alert(data.message);
        viewCart();
    }

    async function viewCart() {
        const response = await fetch(`${pythonURI}/api/radiant/view_cart`);
        const data = await response.json();
        const cartDiv = document.getElementById('cart');
        cartDiv.innerHTML = `<p>Total Amount: $${data.total_amount}</p>`;
        data.cart.forEach(item => {
            const itemDiv = document.createElement('div');
            itemDiv.innerHTML = `<p>${item.product.name} - $${item.product.price} x ${item.quantity}</p>`;
            cartDiv.appendChild(itemDiv);
        });
    }

    async function checkout() {
        const response = await fetch(`${pythonURI}/api/radiant/checkout`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ payment_info: 'dummy', address: 'dummy' })
        });
        const data = await response.json();
        alert(data.message);
        viewCart();
    }

    async function loadShippingInfo() {
        const response = await fetch(`${pythonURI}/api/radiant/shipping`);
        const data = await response.json();
        document.getElementById('shipping').innerText = data.shipping;
    }

    window.onload = () => {
        loadProducts();
        loadShippingInfo();
        viewCart();
    }
</script>